{
  "name": "mozzarella",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "cypress": "cypress",
    "start": "npm run config:dev && ng serve",
    "build": "npm run config:remove && ng build",
    "config:dev": "cp ./mozzarella.config.dev.js ./src/assets/mozzarella.config.js",
    "config:remove": "rm -f ./src/assets/mozzarella.config.js",
    "test": "ng test",
    "test:unit:ci": "ng test --no-watch --browsers=ChromeHeadlessCI",
    "test:cypress:dev": "cypress open",
    "test:cypress:ci": "start-server-and-test start http://localhost:4200 \"cypress run\"",
    "test:visual:dev:setup": "npm run test:visual:dev:build && npm run test:visual:dev:run",
    "test:visual:dev:build": "docker build --tag=\"mozzarella:visual\" ./",
    "test:visual:dev:run": "docker run -v /app/node_modules -v $(pwd):/app --rm -d -it --name mozzarella mozzarella:visual",
    "test:visual:dev:stop": "docker stop mozzarella",
    "test:visual:dev:update": "docker exec -it mozzarella npm run test:visual:ci:update",
    "test:visual:dev:exe": "docker exec -it mozzarella npm run test:visual:ci:exe",
    "test:visual:ci:update": "start-server-and-test start http://localhost:4200 \"npm run visual:base -- --env updateSnapshots=true\"",
    "test:visual:ci:exe": "start-server-and-test start http://localhost:4200 \"npm run visual:base\"",
    "visual:base": "npm run config:dev && cypress run --config \"testFiles=**/**.visual.js\" --reporter cypress-image-snapshot/reporter",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~8.2.4",
    "@angular/common": "~8.2.4",
    "@angular/compiler": "~8.2.4",
    "@angular/core": "~8.2.4",
    "@angular/forms": "~8.2.4",
    "@angular/platform-browser": "~8.2.4",
    "@angular/platform-browser-dynamic": "~8.2.4",
    "@angular/router": "~8.2.4",
    "lodash.clonedeep": "^4.5.0",
    "rxjs": "~6.4.0",
    "tslib": "^1.10.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.803.2",
    "@angular/cli": "~8.3.2",
    "@angular/compiler-cli": "~8.2.4",
    "@angular/language-service": "~8.2.4",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "^5.0.0",
    "cypress": "^3.4.1",
    "cypress-image-snapshot": "^3.1.1",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~6.4.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "start-server-and-test": "^1.10.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.15.0",
    "typescript": "~3.5.3"
  }
}
